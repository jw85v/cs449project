    <Button
        android:id="@+id/openShoppingListBtn"
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:layout_marginStart="232dp"
        android:layout_marginTop="260dp"
        android:background="@android:color/holo_blue_dark"
        android:nextFocusLeft="@id/newItemBtn"
        android:nextFocusRight="@id/clearFieldsBtn"
        android:nextFocusUp="@id/newItemBtn"
        android:nextFocusDown="@id/clearFieldsBtn"
        android:nextFocusForward="@id/clearFieldsBtn"
        android:stateListAnimator="@null"
        android:text="Open Shopping List"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/itineraryItemRecycler"
        android:layout_width="181dp"
        android:layout_height="178dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="131dp"
        android:background="@color/colorPrimary"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

    </android.support.v7.widget.RecyclerView>

    <FrameLayout
        android:id="@+id/fragment_itinerary_slist_container"
        android:layout_width="249dp"
        android:layout_height="374dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="108dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>
    <FrameLayout
        android:id="@+id/fragment_itinerary_new_container"
        android:layout_width="414dp"
        android:layout_height="742dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>

</android.support.constraint.ConstraintLayout>