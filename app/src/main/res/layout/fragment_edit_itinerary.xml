<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="115dp"
        android:layout_height="103dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/checksmall" />

    <EditText
        android:id="@+id/ItineraryName"
        android:layout_width="184dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="79dp"
        android:hint="Itinerary Name"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:nextFocusLeft="@id/itineraryLocation"
        android:nextFocusRight="@id/itineraryLocation"
        android:nextFocusUp="@id/itineraryLocation"
        android:nextFocusDown="@id/itineraryLocation"
        android:nextFocusForward="@id/itineraryLocation"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/itineraryLocation"
        android:layout_width="165dp"
        android:layout_height="39dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="352dp"
        android:hint="Location"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:nextFocusLeft="@id/price"
        android:nextFocusRight="@id/price"
        android:nextFocusUp="@id/price"
        android:nextFocusDown="@id/price"
        android:nextFocusForward="@id/price"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addStopBtn"
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:layout_marginStart="232dp"
        android:layout_marginTop="172dp"
        android:background="@android:color/holo_blue_dark"
        android:nextFocusLeft="@id/newItemBtn"
        android:nextFocusRight="@id/clearFieldsBtn"
        android:nextFocusUp="@id/newItemBtn"
        android:nextFocusDown="@id/clearFieldsBtn"
        android:nextFocusForward="@id/clearFieldsBtn"
        android:stateListAnimator="@null"
        android:text="Add Stop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/startTime"
        android:layout_width="78dp"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="400dp"
        android:hint="Start"
        android:inputType="date|time"
        android:nextFocusLeft="@id/qty"
        android:nextFocusRight="@id/qty"
        android:nextFocusUp="@id/qty"
        android:nextFocusDown="@id/qty"
        android:nextFocusForward="@id/qty"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/endTime"
        android:layout_width="78dp"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="116dp"
        android:layout_marginTop="400dp"
        android:hint="End"
        android:inputType="time"
        android:nextFocusLeft="@id/store"
        android:nextFocusRight="@id/store"
        android:nextFocusUp="@id/store"
        android:nextFocusDown="@id/store"
        android:nextFocusForward="@id/store"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deleteItemBtn"
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="600dp"
        android:nextFocusLeft="@id/itineraryLocation"
        android:nextFocusRight="@id/itineraryLocation"
        android:nextFocusUp="@id/itineraryLocation"
        android:nextFocusDown="@id/itineraryLocation"
        android:nextFocusForward="@id/itineraryLocation"
        android:stateListAnimator="@null"
        android:text="DELETE ITEM"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/clearFieldsBtn"
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:layout_marginStart="232dp"
        android:layout_marginTop="604dp"
        android:nextFocusLeft="@id/itineraryLocation"
        android:nextFocusRight="@id/itineraryLocation"
        android:nextFocusUp="@id/itineraryLocation"
        android:nextFocusDown="@id/itineraryLocation"
        android:nextFocusForward="@id/itineraryLocation"
        android:stateListAnimator="@null"
        android:text="Clear Fields"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deleteItineraryItem"
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:layout_marginStart="232dp"
        android:layout_marginTop="216dp"
        android:background="@android:color/holo_blue_dark"
        android:nextFocusLeft="@id/newItemBtn"
        android:nextFocusRight="@id/clearFieldsBtn"
        android:nextFocusUp="@id/newItemBtn"
        android:nextFocusDown="@id/clearFieldsBtn"
        android:nextFocusForward="@id/clearFieldsBtn"
        android:stateListAnimator="@null"
        android:text="Delete Item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/emptyItineraryBtn"
        android:layout_width="105dp"
        android:layout_height="45dp"
        android:layout_marginTop="485dp"
        android:layout_marginEnd="96dp"
        android:background="@android:color/holo_red_light"
        android:stateListAnimator="@null"
        android:text="Empty"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/saveItineraryBtn"
        android:layout_width="105dp"
        android:layout_height="45dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="485dp"
        android:background="@color/colorPrimaryDark"
        android:stateListAnimator="@null"
        android:text="Save"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/editListItineraryBtn"
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:layout_marginStart="232dp"
        android:layout_marginTop="128dp"
        android:background="@android:color/holo_blue_dark"
        android:nextFocusLeft="@id/newItemBtn"
        android:nextFocusRight="@id/clearFieldsBtn"
        android:nextFocusUp="@id/newItemBtn"
        android:nextFocusDown="@id/clearFieldsBtn"
        android:nextFocusForward="@id/clearFieldsBtn"
        android:stateListAnimator="@null"
        android:text="Add List"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/itineraryDate"
        android:layout_width="165dp"
        android:layout_height="39dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="220dp"
        android:layout_marginTop="84dp"
        android:hint="Date MM/DD/YYYY"
        android:imeOptions="actionNext"
        android:inputType="date"
        android:nextFocusLeft="@id/price"
        android:nextFocusRight="@id/price"
        android:nextFocusUp="@id/price"
        android:nextFocusDown="@id/price"
        android:nextFocusForward="@id/price"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/itineraryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:nextFocusLeft="@id/itineraryLocation"
        android:nextFocusRight="@id/itineraryLocation"
        android:nextFocusForward="@id/itineraryLocation"
        android:text="New Itinerary"
        android:textAlignment="center"
        android:textSize="34.5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:nextFocusDown="@id/itineraryLocation"
        tools:nextFocusLeft="@id/itineraryLocation" />

