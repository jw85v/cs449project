<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="115dp"
        android:layout_height="103dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/checksmall" />

    <TextView
        android:id="@+id/totalTxtView"
        android:layout_width="147dp"
        android:layout_height="29dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="238dp"
        android:layout_marginTop="314dp"
        android:nextFocusDown="@id/itineraryLocation"
        android:text="Total:"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/stops"
        android:layout_width="139dp"
        android:layout_height="39dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="236dp"
        android:layout_marginTop="260dp"
        android:text="# Stops:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/numItems"
        android:layout_width="125dp"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="236dp"
        android:layout_marginTop="288dp"
        android:text="# Items:"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deleteListBtn"
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="35dp"
        android:background="@android:color/holo_blue_dark"
        android:stateListAnimator="@null"
        android:text="Delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/openBtn"
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:layout_marginStart="236dp"
        android:layout_marginTop="128dp"
        android:background="@android:color/holo_blue_dark"
        android:stateListAnimator="@null"
        android:text="Open List"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/listName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="24dp"
        android:nextFocusLeft="@id/itineraryLocation"
        android:nextFocusRight="@id/itineraryLocation"
        android:nextFocusForward="@id/itineraryLocation"
        android:text="My Lists "
        android:textAlignment="center"
        android:textSize="34.5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:nextFocusDown="@id/itineraryLocation"
        tools:nextFocusLeft="@id/itineraryLocation" />

    <!--tools:layout_editor_absoluteX="62dp"-->
    <!--tools:layout_editor_absoluteY="272dp" />-->

    <!--tools:layout_editor_absoluteX="62dp"-->
    <!--tools:layout_editor_absoluteY="272dp" />-->

    <Button
        android:id="@+id/newListBtn"
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:layout_marginStart="236dp"
        android:layout_marginTop="172dp"
        android:background="@android:color/holo_blue_dark"
        android:imeOptions="actionNext"
        android:nextFocusLeft="@id/editItemBtn"
        android:nextFocusRight="@id/editItemBtn"
        android:nextFocusUp="@id/editItemBtn"
        android:nextFocusDown="@id/editItemBtn"
        android:nextFocusForward="@id/editItemBtn"
        android:stateListAnimator="@null"
        android:text="New List"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/shoppingListName"
        android:layout_width="195dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="79dp"
        android:editable="false"
        android:hint="List Name"
        android:imeOptions="actionNext"
        android:inputType="none"
        android:nextFocusLeft="@id/itineraryLocation"
        android:nextFocusRight="@id/itineraryLocation"
        android:nextFocusUp="@id/itineraryLocation"
        android:nextFocusDown="@id/itineraryLocation"
        android:nextFocusForward="@id/itineraryLocation"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/shoppingListRecycler"
        android:layout_width="191dp"
        android:layout_height="334dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="128dp"
        android:background="@color/colorPrimary"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.v7.widget.RecyclerView>

    <FrameLayout
        android:id="@+id/fragment_shopping_container"
        android:layout_width="414dp"
        android:layout_height="742dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </FrameLayout>


</android.support.constraint.ConstraintLayout>