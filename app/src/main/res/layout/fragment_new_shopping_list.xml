<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clickable="true">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="115dp"
        android:layout_height="103dp"
        android:layout_marginStart="168dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/checksmall" />

    <EditText
        android:id="@+id/listName"
        android:layout_width="195dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="79dp"
        android:hint="List Name"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:nextFocusLeft="@id/itineraryLocation"
        android:nextFocusRight="@id/itineraryLocation"
        android:nextFocusUp="@id/itineraryLocation"
        android:nextFocusDown="@id/itineraryLocation"
        android:nextFocusForward="@id/itineraryLocation"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/item"
        android:layout_width="139dp"
        android:layout_height="39dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="236dp"
        android:layout_marginTop="125dp"
        android:hint="Item"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:nextFocusLeft="@id/price"
        android:nextFocusRight="@id/price"
        android:nextFocusUp="@id/price"
        android:nextFocusDown="@id/price"
        android:nextFocusForward="@id/price"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/price"
        android:layout_width="78dp"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="236dp"
        android:layout_marginTop="160dp"
        android:hint="Price"
        android:inputType="number|numberDecimal"
        android:nextFocusLeft="@id/qty"
        android:nextFocusRight="@id/qty"
        android:nextFocusUp="@id/qty"
        android:nextFocusDown="@id/qty"
        android:nextFocusForward="@id/qty"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/qty"
        android:layout_width="56dp"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="320dp"
        android:layout_marginTop="160dp"
        android:hint="Qty"
        android:inputType="number|numberDecimal"
        android:nextFocusLeft="@id/store"
        android:nextFocusRight="@id/store"
        android:nextFocusUp="@id/store"
        android:nextFocusDown="@id/store"
        android:nextFocusForward="@id/store"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/store"
        android:layout_width="140dp"
        android:layout_height="38dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="236dp"
        android:layout_marginTop="196dp"
        android:hint="Store"
        android:imeOptions="actionNext"
        android:inputType="text"
        android:nextFocusLeft="@id/newItemBtn"
        android:nextFocusRight="@id/newItemBtn"
        android:nextFocusUp="@id/newItemBtn"
        android:nextFocusDown="@id/newItemBtn"
        android:nextFocusForward="@id/newItemBtn"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deleteItemBtn"
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:layout_marginStart="236dp"
        android:layout_marginTop="356dp"
        android:background="@android:color/holo_blue_dark"
        android:elevation="5dp"
        android:nextFocusLeft="@id/itineraryLocation"
        android:nextFocusRight="@id/itineraryLocation"
        android:nextFocusUp="@id/itineraryLocation"
        android:nextFocusDown="@id/itineraryLocation"
        android:nextFocusForward="@id/itineraryLocation"
        android:stateListAnimator="@null"
        android:text="DELETE ITEM"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/clearFieldsBtn"
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:layout_marginStart="236dp"
        android:layout_marginTop="276dp"
        android:background="@android:color/holo_blue_dark"
        android:elevation="5dp"
        android:nextFocusLeft="@id/itineraryLocation"
        android:nextFocusRight="@id/itineraryLocation"
        android:nextFocusUp="@id/itineraryLocation"
        android:nextFocusDown="@id/itineraryLocation"
        android:nextFocusForward="@id/itineraryLocation"
        android:stateListAnimator="@null"
        android:text="Clear Fields"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="105dp"
        android:layout_height="45dp"
        android:layout_marginTop="485dp"
        android:layout_marginEnd="96dp"
        android:background="@android:color/holo_red_light"
        android:elevation="24dp"
        android:stateListAnimator="@null"
        android:text="Empty"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/taxTotal"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="240dp"
        android:layout_marginTop="430dp"
        android:text="Estimated Tax:"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/subTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        android:layout_marginTop="410dp"
        android:text="Sub Total:"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/saveListBtn"
        android:layout_width="105dp"
        android:layout_height="45dp"
        android:layout_marginStart="96dp"
        android:layout_marginTop="485dp"
        android:background="@color/design_default_color_primary_dark"
        android:elevation="10dp"
        android:stateListAnimator="@null"
        android:text="Save"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/editItemBtn"
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:layout_marginStart="236dp"
        android:layout_marginTop="315dp"
        android:background="@android:color/holo_blue_dark"
        android:elevation="5dp"
        android:nextFocusLeft="@id/newItemBtn"
        android:nextFocusRight="@id/clearFieldsBtn"
        android:nextFocusUp="@id/newItemBtn"
        android:nextFocusDown="@id/clearFieldsBtn"
        android:nextFocusForward="@id/clearFieldsBtn"
        android:stateListAnimator="@null"
        android:text="Save Edit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/shoppingListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:nextFocusLeft="@id/itineraryLocation"
        android:nextFocusRight="@id/itineraryLocation"
        android:nextFocusForward="@id/itineraryLocation"
        android:text="New List"
        android:textAlignment="center"
        android:textSize="34.5sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:nextFocusDown="@id/itineraryLocation"
        tools:nextFocusLeft="@id/itineraryLocation" />

    <Button
        android:id="@+id/newItemBtn"
        android:layout_width="140dp"
        android:layout_height="44dp"
        android:layout_marginStart="236dp"
        android:layout_marginTop="234dp"
        android:background="@android:color/holo_blue_dark"
        android:elevation="5dp"
        android:imeOptions="actionNext"
        android:nextFocusLeft="@id/editItemBtn"
        android:nextFocusRight="@id/editItemBtn"
        android:nextFocusUp="@id/editItemBtn"
        android:nextFocusDown="@id/editItemBtn"
        android:nextFocusForward="@id/editItemBtn"
        android:stateListAnimator="@null"
        android:text="Add Item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--tools:layout_editor_absoluteX="62dp"-->
    <!--tools:layout_editor_absoluteY="272dp" />-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/shoppingItemRecycler"
        android:layout_width="191dp"
        android:layout_height="334dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="131dp"
        android:background="@color/colorPrimary"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:elevation="7dp" />

    <TextView
        android:id="@+id/grandTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        android:layout_marginTop="450dp"
        android:text="Total:"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>